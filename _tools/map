var helpersJS = require('users/fitoprincipe/geetools:helpers_js')
var image_module = require('users/fitoprincipe/geetools:_tools/image').image

/** MAP */
var map = {};

// ADD COLLECTION TO MAP
map.addImageCollection = function(col, visParams, namePattern, datePattern, active) {
  
  namePattern = namePattern || '{id}'
  datePattern = datePattern || 'yyyy-MM-dd'
  visParams = visParams || {min:0, max:1}
  active = active || false
  
  // var label = label;
  var list = col.toList(col.size())
  var i = 0
  
  // var active = active;
  while (i >= 0) {
    try {
      var img = ee.Image(list.get(i))
      var name = image_module.makeName(img, namePattern, datePattern)
      Map.addLayer(img, visParams, name.getInfo(), active)
      i++
    } catch (error) {
      return null
    }
  }
}

// Remove Layer
// https://gis.stackexchange.com/questions/291199/google-earth-engine-remove-layer-from-the-layer-manager
/*
